# =============================================================================
# MMATS Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
MMATS_ENV=development
MMATS_DEBUG=true
MMATS_LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# Trading Mode
# -----------------------------------------------------------------------------
# Options: advisory, operator, backtest
MMATS_MODE=advisory

# -----------------------------------------------------------------------------
# Market Configuration
# -----------------------------------------------------------------------------
MMATS_MARKETS_ENABLED=crypto,forex
MMATS_DEFAULT_TIMEFRAME=1h

# -----------------------------------------------------------------------------
# Crypto Exchange Credentials (Binance)
# -----------------------------------------------------------------------------
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# -----------------------------------------------------------------------------
# Forex Broker Credentials (OANDA)
# -----------------------------------------------------------------------------
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_PRACTICE=true

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/mmats.db

# -----------------------------------------------------------------------------
# Risk Management
# -----------------------------------------------------------------------------
RISK_MAX_POSITION_PCT=2.0
RISK_MAX_DRAWDOWN_PCT=15.0
RISK_DAILY_LOSS_LIMIT_PCT=3.0
RISK_MAX_LEVERAGE=3.0

# -----------------------------------------------------------------------------
# Notifications (Optional)
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=
